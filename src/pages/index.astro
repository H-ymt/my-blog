---
import { getCollection } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";

const posts = (await getCollection("blog")).sort(
  (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="min-h-[100vh] font-mulish text-primary">
    <Header title={SITE_TITLE} />

    <main>
      <Layout>
        <h1 class="py-10 text-3xl font-medium text-white">
          Engineering knowledge blog
        </h1>
        <p>
          Hi! I&apos;m Yamato.<br />This is a my blog made with Astro. where I
          share my experiences in life and engineering knowledge.
        </p>

        <div class="grid gap-10 py-10 sm:grid-cols-2">
          {
            posts.map((post) => (
              <a href={`/blog/${post.slug}/`} class="grid-cols-subgrid gap-y-2">
                <img
                  src={post.data.heroImage}
                  width={500}
                  height={400}
                  alt=""
                  class="aspect-[2/1.5] rounded-lg object-cover"
                  sizes="(min-width:640px) 50vw, 100vw"
                />
                <h2 class="pt-2 text-lg text-white">{post.data.title}</h2>
              </a>
            ))
          }
        </div>
      </Layout>
    </main>
    <Footer />
  </body>
</html>
